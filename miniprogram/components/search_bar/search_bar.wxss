/* components/search_bar/search_bar.wxss */
.search_bar {
    margin: 20rpx;
    margin-left: 4%;
    position: relative;
    width: 90%;
  }
  
  .search_input {
    background-color: #f5efef;
    height: 60rpx;
    border-radius: 30rpx;
    padding-left: 80rpx;
  }
  
  .icon_search {
    position: absolute;
    top: 50%;
    
    transform: translateY(-50%);
    left: 30rpx;
    width: 30rpx;
    height: 30rpx;

  }
  