/* components/broadItem/broadItem.wxss */


.circleitem{
    border-bottom: 3rpx solid #d4d4d4;
	
  	padding: 15rpx;
    width: 600rpx;
    height: 50rpx;
    display: flex;
    justify-content: left;
    align-content: left;
    background-size: 100% 100%;
    position: relative;
    color: rgb(8, 8, 8);
    align-items: left;
    z-index: 1;
    
    text-align: left;
  }

  .circleitem::after {
    position: absolute;
    top: 10rpx;
    left: -10rpx;
    content: "";
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.01);
    z-index: 0;
    text-align: left;
  }
  
  .circle_text {
    color: rgb(78, 77, 77);
    display: flex;
    align-items: left;
    z-index: 1;
  }

  